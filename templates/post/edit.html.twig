{% extends 'base.html.twig' %}

{% block title %}Изменить пост {{ post.id }}{% endblock %}

{% block body %}
    <div class="container">
        <h2>Изменить пост {{ post.id }}</h2>

        {{ form_start(form) }}
            {{ form_row(form.title) }}
            {{ form_row(form.content) }}
            {{ form_row(form.image) }}
            <img src="
                {% if post.image %}
                    {{ asset(post.getImage()) }}
                {% else %}
                    {{ asset('assets/image/default.png') }}
                {% endif %}
            " alt="" style="max-width: 100px; max-height: 100px; object-fit: contain">
            <br>
            <br>
            <button class="btn btn-success">Изменить</button>
        {{ form_end(form) }}

    </div>
{% endblock %}
